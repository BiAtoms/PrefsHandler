<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/linear_lyt_padding">

        <Spinner
            android:id="@+id/spnr_keys_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/edt_value_submit_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/value" />

        <Button
            android:id="@+id/btn_submit_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/submit_button"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/submit_button_txt"
            android:textSize="@dimen/default_text_size" />


        <Spinner
            android:id="@+id/spnr_find_keys_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_find_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/find_button"
            android:text="@string/find"
            android:textAllCaps="false"
            android:textColor="@color/find_button_txt"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/txt_found_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/default_text_size" />


        <Spinner
            android:id="@+id/spnr_delete_keys_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_delete_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/delete_button"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/delete_button_txt"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>
</ScrollView>